<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".fragments.nivelcuatro.SonCorresNumActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:gravity="center_vertical|center_horizontal"
            android:text="NIVEL 4"
            android:layout_marginTop="5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="34sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/cinta_niveles"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_oros"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="x 0"
                android:id="@+id/tv_puntos"
                android:layout_gravity="center_vertical"
                android:textColor="@color/cardview_dark_background"/>
        </LinearLayout>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ic_avatarNiveles"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2" />
        <ImageView
            android:layout_width="260dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="70dp"
            android:background="@drawable/sonido_corres_num"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:src="@drawable/con_play"
            android:id="@+id/con_play"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/w_globo"
                android:layout_height="@dimen/w_globo"
                android:layout_marginRight="20dp"
                android:background="@drawable/img_uno"
                android:id="@+id/img_uno"/>
            <ImageView
                android:layout_width="@dimen/w_globo"
                android:layout_height="@dimen/w_globo"
                android:background="@drawable/img_nueve"
                android:id="@+id/img_nueve"/>
            <ImageView
                android:layout_width="@dimen/w_globo"
                android:layout_height="@dimen/w_globo"
                android:layout_marginLeft="20dp"
                android:background="@drawable/img_siete"
                android:id="@+id/img_siete"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/w_globo"
                android:layout_height="@dimen/w_globo"
                android:layout_marginRight="20dp"
                android:background="@drawable/img_tres"
                android:id="@+id/img_tres"/>
            <ImageView
                android:layout_width="@dimen/w_globo"
                android:layout_height="@dimen/w_globo"
                android:background="@drawable/img_seis"
                android:id="@+id/img_seis"/>
            <ImageView
                android:layout_width="@dimen/w_globo"
                android:layout_height="@dimen/w_globo"
                android:layout_marginLeft="20dp"
                android:background="@drawable/img_dos"
                android:id="@+id/img_dos"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/w_globo"
                android:layout_height="@dimen/w_globo"
                android:layout_marginRight="20dp"
                android:background="@drawable/img_diez"
                android:id="@+id/img_diez"/>
            <ImageView
                android:layout_width="@dimen/w_globo"
                android:layout_height="@dimen/w_globo"
                android:background="@drawable/img_cuatro"
                android:id="@+id/img_cuatro"/>
            <ImageView
                android:layout_width="@dimen/w_globo"
                android:layout_height="@dimen/w_globo"
                android:layout_marginLeft="20dp"
                android:background="@drawable/img_ocho"
                android:id="@+id/img_ocho"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/w_globo"
                android:layout_height="@dimen/w_globo"
                android:background="@drawable/img_cinco"
                android:id="@+id/img_cinco"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:src="@drawable/img_cinta_dos"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />
</LinearLayout>
