<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AvatarActivity">

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:onClick="cambiarAvatar"
       android:text="cambiar avatar"/>

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/avatarSeleccionado"/>


   <ImageView
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:id="@+id/selecNivel"
       android:layout_margin="50dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true" />

   <ImageView
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:id="@+id/colisionar"
       android:src="@drawable/nino_dos"
       android:layout_alignTop="@+id/selecNivel"
       android:layout_alignParentRight="true"
       android:layout_alignParentEnd="true" />
</LinearLayout>
