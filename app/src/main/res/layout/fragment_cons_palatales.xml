<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.fup.jennyferlopez.proyectokitetkiwe.fragments.niveldos.ConsBasicasFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:gravity="center_vertical|center_horizontal"
                android:text="NIVEL 2"
                android:layout_marginTop="5dp"
                android:textColor="@color/cardview_dark_background"
                android:textSize="34sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/cinta_niveles"
                android:orientation="horizontal"
                android:id="@+id/linearLayout2">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_oros"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="x 0"
                    android:id="@+id/tv_puntos"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/cardview_dark_background"/>
            </LinearLayout>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/ic_avatarNiveles"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/con_basicas"
                android:id="@+id/imageView8"
                android:layout_below="@id/linearLayout2"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/con_palat_px"
                    android:id="@+id/c_pal_px"/>
                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:background="@drawable/con_palat_nx"
                    android:id="@+id/c_pal_nx"/>
                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/con_palat_tx"
                    android:id="@+id/c_pal_tx"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"

                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="@dimen/flecha"
                    android:src="@drawable/img_left"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="30dp"
                    android:layout_gravity="bottom"/>
                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/con_palat_bx"
                    android:id="@+id/c_pal_bx"/>
                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:background="@drawable/con_palat_cx"
                    android:id="@+id/c_pal_cx"/>
                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/con_palat_dx"
                    android:id="@+id/c_pal_dx"/>
                <ImageView
                android:layout_width="30dp"
                android:layout_height="@dimen/flecha"
                android:layout_gravity="bottom"
                    android:layout_marginLeft="50dp"
                android:src="@drawable/img_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/con_palat_kx"
                    android:id="@+id/c_pal_kx"/>
                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:background="@drawable/con_palat_gx"
                    android:id="@+id/c_pal_gx"/>
                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/con_palat_vx"
                    android:id="@+id/c_pal_vx"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/con_palat_jx"
                    android:id="@+id/c_pal_jx"/>
                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:background="@drawable/con_palat_lx"
                    android:id="@+id/c_pal_lx"/>
                <ImageView
                    android:layout_width="@dimen/w_vocal"
                    android:layout_height="@dimen/h_vocal"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/con_palat_zx"
                    android:id="@+id/c_pal_zx"/>
            </LinearLayout>
        </LinearLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_cinta_dos"
            android:layout_marginRight="29dp"
            android:layout_marginLeft="29dp"
            android:id="@+id/imageView6" />
    </LinearLayout>

</FrameLayout>
