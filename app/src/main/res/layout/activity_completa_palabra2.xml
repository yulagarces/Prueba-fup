<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".fragments.niveluno.ConcenVocalesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:gravity="center_vertical|center_horizontal"
            android:text="NIVEL 2"
            android:layout_marginTop="5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="34sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/cinta_niveles"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_oros"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="x 0"
                android:id="@+id/tv_puntos"
                android:layout_gravity="center_vertical"
                android:textColor="@color/cardview_dark_background"/>
        </LinearLayout>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ic_avatarNiveles"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/comp_palabra"
            android:id="@+id/imageView8"
            android:onClick="irDos"
            android:layout_below="@id/linearLayout2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75">
        <ImageView
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/txt_aguila"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView9" />
        <ImageView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/img_aguila2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView9"
            android:id="@+id/imageView10" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ph"
            android:id="@+id/img_ph"
            android:layout_below="@+id/imageView9"
            android:layout_alignLeft="@+id/imageView10"
            android:layout_alignStart="@+id/imageView10"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:id="@+id/img_p"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="50dp"
            android:layout_above="@id/imageView10"
            android:layout_alignLeft="@id/imageView9"
            android:layout_alignStart="@id/imageView9" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/img_h"
            android:layout_alignTop="@id/img_p"
            android:layout_toRightOf="@id/img_p"
             />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:background="@drawable/img_th"
            android:id="@+id/img_th"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@id/imageView10"
            android:layout_alignLeft="@id/img_ph"
            android:layout_alignStart="@id/img_ph" />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:background="@drawable/img_kx"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:id="@+id/img_kx"
            android:layout_below="@id/imageView9"
            android:layout_alignRight="@id/imageView10"
            android:layout_alignEnd="@id/imageView10" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:background="@drawable/img_kh"
            android:id="@+id/img_ch"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="35dp"
            android:layout_alignBottom="@id/imageView10"
            android:layout_alignRight="@id/imageView10"
            android:layout_alignEnd="@id/imageView10" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:src="@drawable/img_cinta_dos"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />
</LinearLayout>
